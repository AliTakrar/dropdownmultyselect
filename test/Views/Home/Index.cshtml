@using test.Models.Entities
@model List<Teacher>
@{
    ViewData["Title"] = "Index";

}

<h1>Teacher's List</h1>
<a href="Home/AddTeacher" class="btn btn-primary">Add Teacher <i class="fa fa-plus"></i></a>

<table class="table table-bordered">
    <thead>
        <tr><td>Name</td><td>Action</td></tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a href="Home/AddTeacher/@item.Id" class="btn btn-warning">Edit Teacher <i class="fa fa-edit"></i></a></td>
                </tr>

            }
        }

    </tbody>
</table> 